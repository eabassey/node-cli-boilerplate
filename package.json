{
  "name": "node-cli-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "start": "npm link && npm run build:watch",
    "build": "npx babel src --delete-dir-on-start --out-dir lib",
    "build:watch": "npx nodemon --exec npm run build",
    "link": "npm link",
    "unlink": "npm unlink"
  },
  "author": "jspreddy",
  "license": "ISC",
  "description": "This is a boilerplate for a cli application.",
  "dependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.4.5",
    "commander": "^2.20.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^1.19.1"
  },
  "nodemonConfig": {
    "ignore": [
      "lib/*"
    ]
  },
  "bin": {
    "loki": "./lib/commands/loki/loki.js"
  }
}
