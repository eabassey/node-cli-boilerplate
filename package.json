{
  "name": "node-cli-boilerplate",
  "version": "2.0.0",
  "scripts": {
    "start": "npm link && npm run build:watch",
    "build": "npx babel src --delete-dir-on-start --out-dir lib",
    "build:watch": "npx nodemon --exec npm run build",
    "link": "npm link",
    "unlink": "npm unlink"
  },
  "author": "jspreddy",
  "license": "ISC",
  "description": "This is a boilerplate for a cli application.",
  "dependencies": {
    "commander": "^5.0.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "lib/*"
    ]
  },
  "bin": {
    "loki": "./lib/commands/loki/loki.js"
  }
}
